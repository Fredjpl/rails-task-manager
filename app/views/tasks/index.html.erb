<h1>My Tasks</h1>
<ul>
  <%@tasks.each do |task| %>
    <li><%= check_box_tag('checkbox', value = "1", checked = task.completed, options = {}) %><%= link_to task.title, task_path(task.id) %><%= link_to "Delete", task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
    </li>
  <% end %>
</ul>

<p><%= link_to "Add a new task", new_task_path %></p>

